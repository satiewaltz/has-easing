{
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "prettier", "plugin:flowtype/recommended"],
  "plugins": ["prettier", "flowtype", "flowtype-errors"],
  "env": {
    "jest": true
  },
  "rules": {
    "default-case": "off",
    "flowtype-errors/show-errors": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "all"
      }
    ]
  }
}
